<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/green" android:startColor="@color/green" />

            <stroke android:width="1dip" android:color="@color/green" />

            <corners android:radius="8dip" />

            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/green_button" android:startColor="@color/green_button" />

            <stroke android:width="1dip" android:color="@color/green" />

            <corners android:radius="8dip" />

            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/green_button" android:startColor="@color/green_button" />

            <stroke android:width="1dip" android:color="@color/green_button" />

            <corners android:radius="8dip" />

            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape>
    </item>

</selector>